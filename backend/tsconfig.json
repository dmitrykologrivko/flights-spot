{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
        "@app/*": ["src/*"],
        "@common/*": ["src/common/*"],
        "@auth/*": ["src/auth/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
