{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
        "@app/*": ["src/*"],
        "@aircraft/*": ["src/aircraft/*"],
        "@airline/*": ["src/airline/*"],
        "@airport/*": ["src/airport/*"],
        "@flight/*": ["src/flight/*"],
        "@source/*": ["src/source/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
